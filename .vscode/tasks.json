{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "cmake build",
			"command": "cmake",
			"args": [
                "..",
                "&&",
                "make",
                "-j"
			],
			"options": {
                "cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}